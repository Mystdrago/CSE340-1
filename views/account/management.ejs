<main>
  <h1>Account Management</h1>

  <% if (messages.error) { %>
    <ul class="notice">
      <% messages.error.forEach(error => { %>
        <li><%= error %></li>
      <% }) %>
    </ul>
  <% } %>

  <% if (messages.success) { %>
    <ul class="success">
      <% messages.success.forEach(msg => { %>
        <li><%= msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <% if (accountData.account_type !== "Client") { %>
  <h2>Welcome <%= accountData.account_firstname %></h2>
<% } %>

<p>
  <a href="/account/update/<%= accountData.account_id %>">
    Update Account Information
  </a>
</p>

<% if (
  accountData.account_type === "Employee" ||
  accountData.account_type === "Admin"
) { %>
  <h3>Inventory Management</h3>
  <p>
    <a href="/inv/">Manage Inventory</a>
  </p>
<% } %>
</main>