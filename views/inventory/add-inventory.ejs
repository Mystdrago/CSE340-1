<h1><%= title %></h1>

<% if (messages) { %>
  <%- messages() %>
<% } %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/add-inventory" method="POST">
  <label for="classification_id">Classification</label>
  <%- classificationList %>

  <label for="inv_make">Make</label>
  <input type="text" id="inv_make" name="inv_make" required value="<%= values.inv_make || '' %>">

  <label for="inv_model">Model</label>
  <input type="text" id="inv_model" name="inv_model" required value="<%= values.inv_model || '' %>">

  <label for="inv_year">Year</label>
  <input type="number" id="inv_year" name="inv_year" required min="1886" value="<%= values.inv_year || '' %>">

  <label for="inv_description">Description</label>
  <textarea id="inv_description" name="inv_description" required><%= values.inv_description || '' %></textarea>

  <label for="inv_price">Price</label>
  <input type="number" id="inv_price" name="inv_price" required step="0.01" min="0" value="<%= values.inv_price || '' %>">

  <label for="inv_miles">Mileage</label>
  <input type="number" id="inv_miles" name="inv_miles" required min="0" value="<%= values.inv_miles || '' %>">

  <label for="inv_color">Color</label>
  <input type="text" id="inv_color" name="inv_color" required value="<%= values.inv_color || '' %>">

  <button type="submit">Add Inventory</button>
</form>
